<div id="password-lost-form" class="panel panel-default col-sm-12 col-md-4 col-md-offset-4">
   <div class="panel-body">
     <%= form_tag(lost_password_path) do %>
      <fieldset>

        <!-- Form Name -->
        <legend><%=l(:label_password_lost)%></legend>

        <!-- Text input-->
        <div class="form-group">
          <label for="mail"><%=l(:field_mail)%></label>
          <%= text_field_tag 'mail', nil, :class => 'form-control input-md' %>
          <span class="help-block">Enter your email</span>
        </div>

        <!-- Button -->
        <div class="form-group">
          <button id="submit" name="submit" class="btn btn-success">
              <%= l(:button_submit) %>
          </button>
        </div>

      </fieldset>
    <% end %>
  </div>
</div>
