<div id="recover-password-form" class="panel panel-default col-sm-12 col-md-4 col-md-offset-4">
  <div class="panel-body">
    <%= error_messages_for 'user' %>

    <%= form_tag(lost_password_path) do %>
      <%= hidden_field_tag 'token', @token.value %>

      <!-- Form Name -->
      <legend><%=l(:label_password_lost)%></legend>

      <!-- Text input-->
      <div class="form-group">
        <label for="new_password"><%=l(:field_new_password)%></label>
        <%= password_field_tag 'new_password', nil, :class => 'form-control input-md' %>
        <span class="help-block">Enter your new password. <%= l(:text_caracters_minimum, :count => Setting.password_min_length) %></span>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <label for="new_password_confirmation"><%=l(:field_password_confirmation)%></label>
        <%= password_field_tag 'new_password_confirmation', nil, :class => 'form-control input-md' %>
        <span class="help-block">Confirm your new password</span>
      </div>

      <!-- Button -->
      <div class="form-group">
        <%= submit_tag l(:button_save), :class => 'btn btn-success' %>
      </div>

    <% end %>
  </div>
</div>
