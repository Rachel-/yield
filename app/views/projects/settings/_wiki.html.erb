<%= labelled_form_for @wiki, :as => :wiki, :url => { :controller => 'wikis', :action => 'edit', :id => @project }, :remote => true, :method => 'post' do |f| %>
  <%= error_messages_for 'wiki' %>

  <div class="form-group">
    <%= f.text_field :start_page, :size => 60, :required => true, :class => 'form-control' %>
    <span class="help-block"><%= l(:text_unallowed_characters) %>: , . / ? ; : |</span>
  </div>

  <div class="form-group">
    <%= submit_tag((@wiki.nil? || @wiki.new_record?) ? l(:button_create) : l(:button_save), :class => 'btn btn-success') %>
    <%= link_to(l(:button_delete), {:controller => 'wikis', :action => 'destroy', :id => @project}, :class => 'btn btn-danger pull-right') if @wiki && !@wiki.new_record? %>
  </div>
<% end %>
